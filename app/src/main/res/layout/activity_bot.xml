<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="match_parent"
    tools:context="com.example.sghaier.foodin.Bot">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/linearLayout16"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical|center_horizontal"
                    android:layout_toRightOf="@+id/imageView29"
                    android:layout_toEndOf="@+id/imageView29"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/linearLayout14">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/topcorner"
                        android:gravity="left">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:gravity="center|fill"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Bonjour, que désirez-vous \n manger ?"
                            android:id="@+id/bot_tv_bonjour"
                            android:paddingLeft="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@drawable/botshape"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"

                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Asiatique"
                            android:textColor="@color/rose_clear"
                            android:id="@+id/bot_tv_asiatique" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@drawable/botshape"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textColor="@color/rose_clear"
                            android:layout_height="50dp"

                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Burger"
                            android:id="@+id/bot_tv_burger" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@drawable/botshape"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="RIZ"
                            android:visibility="gone"
                            android:textColor="@color/rose_clear"

                            android:gravity="center"
                            android:id="@+id/bot_tv_riz" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@drawable/botshape"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:textColor="@color/rose_clear"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Oriental"
                            android:visibility="gone"
                            android:id="@+id/bot_tv_oriental" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/bottomcorner"
                        android:layout_width="match_parent"
                        android:paddingBottom="10dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_height="50dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Voir Plus"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:id="@+id/bot_tv_plus"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/imageView29"
                    android:src="@drawable/fooderlogogrand"
                    android:layout_alignBottom="@+id/linearLayout14"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/linearreponse1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Asiatique"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/reponse"
                    android:textColor="@color/white"
                    android:id="@+id/bot_tv_reponse1"
                    android:layout_marginRight="2dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageView30"
                    android:layout_toStartOf="@+id/imageView30"
                    android:layout_marginEnd="10dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/imageView30"
                    android:src="@drawable/avatar"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/layoutquestion2"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/imageView31"
                    android:src="@drawable/fooderlogogrand"
                    android:layout_alignBottom="@+id/linearLayout15"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/topcorner"
                    android:gravity="center_vertical|center_horizontal"
                    android:id="@+id/linearLayout15"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/imageView31"
                    android:layout_toEndOf="@+id/imageView31"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:gravity="left|center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Très bon choix, que \n souhaitez-vous faire ?"
                            android:id="@+id/bot_tv_question2"
                            android:layout_gravity="left"
                            android:paddingLeft="10dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:background="@drawable/botshape"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Livraison"
                        android:textColor="@color/rose_clear"
                        android:id="@+id/bot_tv_livraison" />

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="@color/rose_clear"
                        android:layout_height="50dp"
                        android:background="@drawable/botshape"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="A emporter"
                        android:id="@+id/bot_tv_aemporter" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Reservation"
                        android:textColor="@color/rose_clear"
                        android:background="@drawable/botshape"
                        android:gravity="center"
                        android:id="@+id/bot_tv_reservation" />



                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|right"
                android:visibility="gone"
                android:id="@+id/linearreponse2"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="bottom">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Livraison"
                    android:background="@drawable/reponse"
                    android:textColor="@color/white"
                    android:id="@+id/bot_tv_reponse2"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|center_horizontal" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/imgviewreponse2"
                    android:src="@drawable/avatar" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:id="@+id/linearresultrecherche"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="10dp"
                    android:background="@drawable/reponserecherche"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="J&apos;ai trouvée 6 restaurants asiatiques disponibles ce midi sur Aix-de-Provence pour une livraison."
                    android:id="@+id/bot_tv_resultatrecherche"
                    android:paddingLeft="10dp" />
            </LinearLayout>
            <HorizontalScrollView
                android:id="@+id/scrollhorizentale"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <LinearLayout android:id="@+id/my_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:id="@+id/listbot"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp" />
                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
